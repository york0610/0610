{
  "name": "@netlify/sdk--ui-core",
  "version": "2.0.0",
  "author": "Netlify, Inc.",
  "description": "A framework-agnostic toolkit for building UI extensions on top of the Netlify platform.",
  "license": "ISC",
  "type": "module",
  "files": [
    "dist/**"
  ],
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "default": "./dist/main.js"
    },
    "./mocks": {
      "types": "./dist/mocks.d.ts",
      "default": "./dist/mocks.js"
    }
  },
  "browserslist": {
    "production": [
      "last 2 Chrome versions",
      "Safari >= 15",
      "last 2 Edge versions",
      "last 2 Firefox versions",
      "Firefox ESR",
      "> 1%",
      "not IE 11",
      "not op_mini all"
    ]
  },
  "dependencies": {
    "event-iterator": "^2.0.0",
    "iter-tools-es": "^7.5.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "fast-check": "^3.19.0",
    "happy-dom": "^15.0.0",
    "vitest": "^2.0.0"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "build:watch": "tsc --build tsconfig.build.json --watch",
    "watch": "pnpm run build:watch",
    "clean": "rm -rf dist/ && rm -f *.tsbuildinfo",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch"
  }
}